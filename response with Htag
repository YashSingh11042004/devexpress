const express = require('express');
const app = express();

let port = 3000;

app.listen(port, () =>
   console.log(`Server running on ${port}`));

app.use((req, res) => {
 // console.log(req);
  console.log("âœ… Node is running!");
  let code = "<h1> Hello World </h1> <ul> <li> Node </li> <li> Express </li> </ul>";
  res.send(code);
});
